{
  "name": "docs",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "rm -fr dist cache && parcel build index.pug --public-url /textcomplete",
    "format:eslint": "eslint --fix '**/*.ts' '**/*.tsx'",
    "format:prettier": "prettier --write '**/*.ts' '**/*.tsx'",
    "format": "run-s format:eslint format:prettier",
    "lint": "eslint '**/*.ts' '**/*.tsx'",
    "start": "parcel index.pug"
  },
  "dependencies": {
    "@textcomplete/codemirror": "^0.1.0",
    "@textcomplete/contenteditable": "^0.1.0",
    "@textcomplete/core": "^0.1.0",
    "@textcomplete/textarea": "^0.1.0",
    "codemirror": "^5.54.0",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "pug": "^3.0.0",
    "sass": "^1.26.8"
  },
  "prettier": {
    "semi": false
  }
}
